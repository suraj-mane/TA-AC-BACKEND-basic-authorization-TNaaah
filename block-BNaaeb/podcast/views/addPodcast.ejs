<%- include('partials/header'); -%>
<div class="container">
  <div class="mt-5">
    <form action="/podcast/addPodcast" class="border border-3 border-dark m-auto w-50 p-3 text-center" method="post">
      <h1 class="text-center m-4">Add podcast</h1>
      <input class="w-100 fs-5 rounded-3 p-2 m-2" type="text" name="name" placeholder="Enter Your Name">
      <input class="w-100 fs-5 rounded-3 p-2 m-2" type="text" name="section" placeholder="Enter Your Section">
      <input class="w-100 fs-5 rounded-3 p-2 m-2" type="text" name="category" placeholder="Enter Your Category">
      <button type="submit" class="btn btn-success d-block m-auto mt-3 fs-5 ">Add podcast</button>
    </form>
  </div>
</div>  
<%- include('partials/footer'); -%>