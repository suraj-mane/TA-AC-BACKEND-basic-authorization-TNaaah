<%- include('partials/header'); -%>
<div class="container">
  <div class="mt-5 ">
    <form action="/users/register" class="border border-3 border-dark m-auto w-50 p-3 text-center" method="post">
      <h1 class="text-center m-4">Register Form</h1>
      <% if(error){%>
      <h6 class="text-danger"><%= error%></h6>
      <%}%>
      <input class="w-100 fs-5 rounded-3 p-2 m-2" type="text" name="name" placeholder="Enter Your Name">
      <input class="w-100 rounded-3 p-2 m-2 fs-5" type="text" name="email" placeholder="Enter Your Email">
      <input class="w-100 rounded-3 p-2 m-2 fs-5" type="text" name="password" placeholder="Enter Your Password">
      <input class="w-100 rounded-3 p-2 m-2 fs-5" type="text" name="member" placeholder="Enter Your Member">
      <input class="form-check-input fs-5" type="radio" name="isAdmin" id="flexRadioDefault1" value="true">
      <label class="form-check-label fs-5" for="flexRadioDefault1">
        Admin
      </label>
      <input class="form-check-input fs-5" type="radio" name="isAdmin" id="flexRadioDefault1" value="false">
      <label class="form-check-label fs-5" for="flexRadioDefault1">
        User
      </label>
      <button type="submit" class="btn btn-success d-block m-auto mt-3 fs-5 ">Register</button>
    </form>
  </div>
</div>
<%- include('partials/footer'); -%>